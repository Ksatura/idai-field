{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "config/**/*",
        "index.ts"
    ]
}
