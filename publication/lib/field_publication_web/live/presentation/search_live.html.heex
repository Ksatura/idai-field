<h1>Search</h1>
<div>
  <%= @search_results.total %> hits
</div>
<div class="flex flex-row">
  <div class="w-64 m-4 basis-1/4">
    <form phx-change="search" phx-submit="search">
      <input class="w-full" type="text" value={@query} name="search_input" phx-debounce="100" />
    </form>
    <h2>Active filters</h2>
    <%= for {field, value} <- @filters do %>
      <.aggregation_deselection field_name={field} value={value} />
    <% end %>

    <%= for {field, buckets} <- @search_results.aggregations do %>
      <%= unless Enum.find(@filters, fn({already_filtered_field, _value}) -> already_filtered_field == field end ) do %>
        <.aggregation_selection field_name={field} buckets={buckets} />
      <% end %>
    <% end %>
  </div>
  <div class="w-full">
    <%= for %{"project_name" => project, "publication_draft_date" => date, "full_doc" => doc} <- @search_results.docs do %>
      <DocumentLink.show
        doc={doc}
        project={project}
        date={date}
        lang={Gettext.get_locale(FieldPublicationWeb.Gettext)}
        image_count={3}
      />
    <% end %>
  </div>
</div>
